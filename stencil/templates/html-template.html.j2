  <!-- Mermaid.js: run first; nav-tabs waits for mermaid-ready. Post-process SVG ids so multiple diagrams do not duplicate ids (WCAG 4.1.1). -->
  <script type="module">
    import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs';
    mermaid.initialize({ startOnLoad: false, theme: 'neutral' });
    document.querySelectorAll('pre code.language-mermaid, pre.mermaid').forEach((el) => {
      const pre = el.tagName === 'PRE' ? el : el.closest('pre');
      if (!pre) return;
      const text = (el.tagName === 'PRE' ? el : el).textContent.replace(/^\n|\n$$/g, '');
      const div = document.createElement('div');
      div.className = 'mermaid';
      div.textContent = text;
      pre.insertAdjacentElement('afterend', div);
      pre.remove();
    });
    await mermaid.run({ querySelector: '.mermaid' });
    const mermaidContainers = document.querySelectorAll('.mermaid');
    if (mermaidContainers.length > 1) {
      document.querySelectorAll('.mermaid').forEach((container, i) => {
        const prefix = 'mermaid-' + i + '-';
        const svg = container.querySelector('svg');
        if (!svg) return;
        const idMap = {};
        svg.querySelectorAll('[id]').forEach((el) => {
          const oldId = el.getAttribute('id');
          if (oldId) {
            const newId = prefix + oldId;
            idMap[oldId] = newId;
            el.setAttribute('id', newId);
          }
        });
        function updateRef(attrValue) {
          if (!attrValue || !attrValue.startsWith('#')) return attrValue;
          const oldId = attrValue.slice(1);
          return idMap[oldId] !== undefined ? '#' + idMap[oldId] : attrValue;
        }
        function updateUrlRefs(val) {
          if (!val || !val.includes('url(#')) return val;
          return val.replace(/url\(#([^)]+)\)/g, (_, id) =>
            idMap[id] !== undefined ? 'url(#' + idMap[id] + ')' : 'url(#' + id + ')');
        }
        svg.querySelectorAll('[href]').forEach((el) => {
          const href = el.getAttribute('href');
          if (href) el.setAttribute('href', updateRef(href));
        });
        svg.querySelectorAll('*').forEach((el) => {
          const xhref = el.getAttributeNS('http://www.w3.org/1999/xlink', 'href');
          if (xhref) el.setAttributeNS('http://www.w3.org/1999/xlink', 'href', updateRef(xhref));
          ['fill', 'stroke', 'clip-path', 'mask', 'filter', 'style', 'marker-end', 'marker-start', 'marker-mid'].forEach((attr) => {
            const val = el.getAttribute(attr);
            if (val) {
              const updated = updateUrlRefs(val);
              if (updated !== val) el.setAttribute(attr, updated);
            }
          });
        });
      });
    }
    window.__mermaidReady = true;
    window.dispatchEvent(new Event('mermaid-ready'));
  </script>

  <!-- Convert nav-tabs to Bootstrap tabs (after Mermaid to avoid moving nodes mid-render) -->
  <script>
  (function() {
    function initTabs() {
    const nav = document.querySelector('nav.nav-tabs');
    if (!nav) return;
    
    const container = document.querySelector('.container');
    const links = nav.querySelectorAll('a');
    if (links.length === 0) return;
    
    // Convert nav to Bootstrap format
    nav.className = 'nav nav-tabs problem-tabs';
    nav.setAttribute('role', 'tablist');
    
    // Create tab content container
    const tabContent = document.createElement('div');
    tabContent.className = 'tab-content';
    
    // Find all h1 sections that match our tab links
    links.forEach((link, i) => {
      const targetId = link.getAttribute('href').slice(1);
      const h1 = document.getElementById(targetId);
      if (!h1) return;
      
      // Setup the nav link
      link.className = 'nav-link' + (i === 0 ? ' active' : '');
      link.setAttribute('data-bs-toggle', 'tab');
      link.setAttribute('data-bs-target', '#tab-' + targetId);
      link.setAttribute('role', 'tab');
      link.setAttribute('aria-selected', i === 0 ? 'true' : 'false');
      
      // Create tab pane
      const pane = document.createElement('div');
      pane.className = 'tab-pane fade' + (i === 0 ? ' show active' : '');
      pane.id = 'tab-' + targetId;
      pane.setAttribute('role', 'tabpanel');
      
      // Collect all elements from h1 until next h1
      let el = h1;
      const elements = [h1];
      while (el.nextElementSibling && el.nextElementSibling.tagName !== 'H1') {
        el = el.nextElementSibling;
        elements.push(el);
      }
      
      // Move elements into pane
      elements.forEach(e => pane.appendChild(e));
      tabContent.appendChild(pane);
    });
    
    // Insert tab content after nav
    nav.parentNode.insertBefore(tabContent, nav.nextSibling);
    }
    if (window.__mermaidReady) {
      initTabs();
    } else {
      window.addEventListener('mermaid-ready', initTabs, { once: true });
    }
  })();
  </script>
